@model CourseCategory

<form method="post">
    <div class="container">
        <div class="row">
            <label asp-for="Name" for="name">Category Name</label>
            <input asp-for="Name" disabled class="form-control" >
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 p-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 p-3">
                <a asp-controller="CourseCategory" asp-action="Index" class=" btn btn-secondary border form-control">Go Back To List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}